<div class="text-center container" style="max-width:570px; background-color: #000000;">
  <ul class = "list-group" >

    <% @comments.each do |comment| %>

        <li class = "list-group-item text-left">
          <div class = "author">
            <p> <%= comment.author %> </p>
          </div>
          <div class = "author">
            <p> <%= comment.artist%> </p>
            <p> <%= comment.title%> </p>
          </div>
          <div class = "comment">
            <p> <%= comment.comment %> </p>
          </div>

    <% end %>

  </ul>



</div>

<br>

<div class="text-center">

<%= link_to homepage_path do%>
    <h4 class="friends-name text-center" style="color: #B90000"> BACK </h4>
<% end %>
<br>
<%= link_to login_path do%>
    <h4 class="friends-name text-center" style="color: #B90000"> LOGOUT </h4>
<% end %>
</div>